body
    font-family "Fira Sans"
    -webkit-tap-highlight-color transparent
    -webkit-user-select none
    -webkit-touch-callout none

#back
    cursor pointer
    margin-right -55px
    padding-left 5px
    z-index 9000

    &:before
        content "<"
        display inline-block
        font-size 1.5em
        margin 1px 2.5px 0 0
        vertical-align top

.hide-back-button
    #back
        visibility hidden

.hide
    display none

